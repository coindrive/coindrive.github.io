{
  "name": "CoinDrive",
  "description": "Chat with Bitcoin app",
  "version": "0.5.2",
  "short_name": "CoinDrive",
  "manifest_version": 2,
  "app": {
    "background": {
      "scripts": ["js/background.js"]
    }
  },
  "permissions": [
    "notifications",
    "webview",
    {"fileSystem": ["write"]},
    "storage",
    "unlimitedStorage",
    "fullscreen"
  ],
  "icons": {
    "16": "img/icons/icon16.png",
    "32": "img/icons/icon32.png",
    "60": "img/icons/icon60.png",
    "64": "img/icons/icon64.png",
    "90": "img/icons/icon90.png",
    "128": "img/icons/icon128.png"
  }
}
